<%- include ("../partials/top") %>
    <div class="container container-signup text-center">
        <div class="row justify-content-around">
            <div class="col-lg-5 col-md-6 col-sm-8 card bg-light p-3">
                <!-- <div class="logo">
                    <img class="img-thumbnail" src="" alt="logo" width="142px" height="110px">
                </div> -->
                <h2 class="page-header">Sign Up</h2>
                <%- include ("../partials/messages") %>
                    <!-- FORM -->
                    <form class="form-signin" method="POST" action="/fms.edu.in/users/register">

                        <!-- username -->
                        <div class="form-group">
                            <label for="inputUsername" class="sr-only">Username</label>
                            <input type="text" name="username" id="inputUsername" class="form-control" placeholder="Enter username" value="<%= typeof username != 'undefined' ? username : '' %>" autofocus>
                        </div>

                        <!-- firstname -->
                        <div class="form-group">
                            <label for="inputFirstName" class="sr-only">First Name</label>
                            <input type="text" name="firstname" id="inputFirstName" class="form-control" placeholder="Enter first name" value="<%= typeof firstname != 'undefined' ? name : '' %>">
                        </div>

                        <!-- lastname -->
                        <div class="form-group">
                            <label for="inputLastName" class="sr-only">Last Name</label>
                            <input type="text" name="lastname" id="inputLastName" class="form-control" placeholder="Enter last name" value="<%= typeof lastname != 'undefined' ? name : '' %>">
                        </div>

                        <!-- email -->
                        <div class="form-group">
                            <label for="inputEmail" class="sr-only">Email address</label>
                            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Enter email address" value="<%= typeof email != 'undefined' ? email : '' %>">
                        </div>

                        <!-- phone -->
                        <div class="form-group">
                            <label for="inputPhone" class="sr-only">Phone number</label>
                            <input type="tel" name="phone" id="inputPhone" class="form-control" pattern="[789][0-9]{9}" placeholder="Enter phone number" value="<%= typeof phone != 'undefined' ? phone : '' %>">
                        </div>

                        <!-- role -->
                        <fieldset class="form-group text-left">
                            <div class="row align-items-center">
                                <legend class="col-form-label col-4">Select role:</legend>
                                <div class="form-check col-4">
                                    <input class="form-check-input" type="radio" name="role" id="studentBtn" value="student" checked>
                                    <label class="form-check-label" for="studentBtn">
                                    Student
                                </label>
                                </div>
                                <div class="form-check col-4">
                                    <input class="form-check-input" type="radio" name="role" id="facultyBtn" value="faculty">
                                    <label class="form-check-label" for="facultyBtn">
                                    Faculty
                                </label>
                                </div>
                            </div>
                        </fieldset>

                        <!-- password -->
                        <div class="form-group">
                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Enter a password" value="<%= typeof password != 'undefined' ? password : '' %>">
                        </div>

                        <!-- confirm password -->
                        <div class="form-group">
                            <label for="inputPassword2" class="sr-only">Confirm Password</label>
                            <input type="password" name="password2" id="inputPassword2" class="form-control" placeholder="Confirm password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                        </div>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                    </form>
                    <p class="mb-1 mt-2">Already have an account? <a href="/fms.edu.in/users/login" class="text-decoration-none">Login</a></p>
            </div>
        </div>
    </div>
    <%- include ("../partials/footer") %>